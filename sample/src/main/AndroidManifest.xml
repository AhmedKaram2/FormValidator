<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.sha.formvalidatorsample">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".App"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".presentation.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".presentation.FieldsActivity" />
        <activity android:name=".presentation.FormActivity" />
        <activity android:name=".presentation.RxFormActivity" />
        <activity android:name=".presentation.FieldActivity" />
        <activity android:name=".presentation.EmailOrCreditCardActivity" />
        <activity android:name=".presentation.PrefixAndRangeValidatorActivity" />
        <activity android:name=".presentation.PasswordValidatorActivity" />
        <activity android:name=".presentation.AutoCompleteTextViewActivity" />

        <activity
            android:name=".presentation.SettingsActivity"
            android:label="Preferences">
        </activity>

    </application>

</manifest>